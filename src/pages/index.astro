---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import Hr from "@/components/Hr.astro";
import { resume } from "@/data/resume";

const pageTitle = `${resume.name} · Resume`;
const pageDescription = resume.summary.join(" ");
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  <main id="main-content" data-layout="resume" class="space-y-16 pb-16">
    <section id="summary" class="pt-12">
      <div class="flex flex-col gap-12">
        <div
          class:list={[
            "flex flex-col gap-10 sm:flex-row sm:items-start sm:justify-between",
            resume.photo?.src &&
              "lg:grid lg:grid-cols-[minmax(0,1fr)_minmax(200px,240px)] lg:items-center lg:gap-16",
          ]}
        >
          <div class="flex flex-col gap-6 lg:pe-10">
            <div class="space-y-2">
              <h1 class="text-4xl font-bold sm:text-5xl">{resume.name}</h1>
              <p class="text-xl font-medium text-foreground/80 sm:text-2xl">{resume.title}</p>
            </div>

            <div class="flex flex-wrap items-center gap-3 text-sm text-foreground/70">
              <span class="inline-flex items-center gap-2 rounded-full border border-border/60 bg-background/80 px-3 py-1 font-semibold uppercase tracking-wide">
                {resume.location}
              </span>
            </div>

            <div class="pt-2"><Socials /></div>
          </div>

          {resume.photo?.src && (
            <figure
              class="relative mx-auto flex w-full max-w-[220px] justify-center rounded-3xl border border-border/70 bg-gradient-to-br from-background via-background to-background/70 p-3 shadow-[0_28px_60px_-24px_rgba(15,23,42,0.65)] sm:max-w-[240px] lg:justify-self-end"
            >
              <div class="relative aspect-[5/6] w-full overflow-hidden rounded-2xl">
                <img
                  src={resume.photo.src}
                  alt={resume.photo.alt ?? resume.name}
                  width={resume.photo.width ?? 320}
                  height={resume.photo.height ?? 320}
                  loading="lazy"
                  class="h-full w-full object-cover"
                />
                <div class="pointer-events-none absolute inset-0 rounded-2xl ring-1 ring-inset ring-white/10" aria-hidden="true" />
              </div>
            </figure>
          )}
        </div>

        <div class="overflow-hidden rounded-3xl border border-border/70 bg-background/80 p-8 shadow-[0_32px_80px_-30px_rgba(15,23,42,0.55)]">
          <h2 class="text-xs font-semibold uppercase tracking-[0.35em] text-foreground/60">Professional Summary</h2>
          <div class="mt-5 space-y-4 text-base leading-relaxed text-foreground/90">
            {resume.summary.map(paragraph => (
              <p>{paragraph}</p>
            ))}
          </div>
        </div>
      </div>
    </section>

    <Hr />

    <section id="skills" aria-labelledby="skills-heading">
      <h2 id="skills-heading" class="text-2xl font-semibold uppercase tracking-wide">
        Key Skills
      </h2>
      <div class="mt-6 grid gap-6 sm:grid-cols-2">
        {resume.skills.map(skill => (
          <article class="rounded-lg border border-border/60 bg-background/60 p-5">
            <h3 class="text-lg font-semibold text-accent">{skill.category}</h3>
            <ul class="mt-3 space-y-2 text-sm leading-relaxed">
              {skill.items.map(item => (
                <li>{item}</li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </section>

    <Hr />

    <section id="experience" aria-labelledby="experience-heading">
      <h2 id="experience-heading" class="text-2xl font-semibold uppercase tracking-wide">
        Work Experience
      </h2>
      <div class="mt-8 space-y-10">
        {resume.experiences.map(experience => (
          <article class="relative border-s-2 border-border/70 ps-6">
            <div class="absolute -start-[13px] top-1 size-3 rounded-full border border-border bg-background" aria-hidden="true" />
            <div class="flex flex-col gap-2 sm:flex-row sm:items-baseline sm:justify-between">
              <div>
                <h3 class="text-xl font-semibold text-accent">{experience.role}</h3>
                <p class="text-sm uppercase tracking-wide text-foreground/70">
                  {experience.company} · {experience.location}
                </p>
              </div>
              <span class="text-sm font-semibold text-foreground/80">{experience.period}</span>
            </div>
            <p class="mt-3 text-sm leading-relaxed text-foreground/90">{experience.description}</p>
            <ul class="mt-3 ms-4 list-disc space-y-2 text-sm leading-relaxed">
              {experience.highlights.map(highlight => (
                <li>{highlight}</li>
              ))}
            </ul>
            <p class="mt-3 text-xs font-semibold uppercase tracking-wide text-foreground/60">
              Tech:
              <span class="ms-1 font-normal normal-case text-foreground/80">
                {experience.technologies.join(", ")}
              </span>
            </p>
          </article>
        ))}
      </div>
    </section>

    <Hr />

    <section id="education" aria-labelledby="education-heading">
      <h2 id="education-heading" class="text-2xl font-semibold uppercase tracking-wide">
        Education
      </h2>
      <ul class="mt-6 space-y-6">
        {resume.education.map(edu => (
          <li class="rounded-lg border border-border/60 bg-background/60 p-5">
            <h3 class="text-lg font-semibold text-accent">{edu.degree}</h3>
            <p class="mt-1 text-sm text-foreground/80">{edu.school}</p>
            <p class="text-xs uppercase tracking-wide text-foreground/60">{edu.period}</p>
          </li>
        ))}
      </ul>
    </section>

    <Hr />

    <section id="contact" aria-labelledby="contact-heading">
      <h2 id="contact-heading" class="text-2xl font-semibold uppercase tracking-wide">
        Contact
      </h2>
      <div class="mt-6 grid gap-4 text-sm sm:grid-cols-2">
        <dl class="space-y-3">
          <div>
            <dt class="font-semibold uppercase tracking-wide text-foreground/70">Location</dt>
            <dd>{resume.location}</dd>
          </div>
          <div>
            <dt class="font-semibold uppercase tracking-wide text-foreground/70">Email</dt>
            <dd>
              <a class="hover:text-accent" href={`mailto:${resume.email}`}>
                {resume.email}
              </a>
            </dd>
          </div>
        </dl>
        <dl class="space-y-3">
          {resume.profiles.map(profile => (
            <div>
              <dt class="font-semibold uppercase tracking-wide text-foreground/70">{profile.label}</dt>
              <dd>
                <a class="hover:text-accent" href={profile.url} target="_blank" rel="noreferrer">
                  {profile.url}
                </a>
              </dd>
            </div>
          ))}
        </dl>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
